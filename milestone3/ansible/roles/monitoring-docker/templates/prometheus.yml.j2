global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "frontend"
    static_configs:
      - targets: ["{{ frontend_private_ip }}:9100"]

  - job_name: "backend"
    static_configs:
      - targets: ["{{ backend_private_ip }}:9100"]

  - job_name: "local"
    static_configs:
      - targets: ["{{ monitoring_private_ip }}:9100"]

  - job_name: "frontend-cAdvisor"
    static_configs:
      - targets: ["{{ frontend_private_ip }}:9095"]

  - job_name: "backend-cAdvisor"
    static_configs:
      - targets: ["{{ backend_private_ip }}:9095"]

  - job_name: "local-cAdvisor"
    static_configs:
      - targets: ["{{ monitoring_private_ip }}:9095"]
